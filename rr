void Model2D::setOnePointPressureBC()
{	
 
 	for (int i = 0; i < numVerts; i++)
	{
		// Neumman for pressure ("one-point") 
		if( ( fabs( X.Get(i) - 0.5*X.Max() ) < 0.1 ) && 
	        ( fabs( Y.Get(i) - 1.0*Y.Min() ) < 0.1 ) )
		{
		    idbcp.AddItem(i);
			pc.Set(i,0.0);
			cout << "Pressure index set:" << i << endl;
			break;
	    }
	}

}

